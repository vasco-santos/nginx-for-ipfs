{
  "name": "@hash-stream/index",
  "version": "1.0.0",
  "description": "The index client to use hash-stream",
  "repository": {
    "type": "git",
    "url": "https://github.com/vasco-santos/hash-stream.git",
    "directory": "packages/index"
  },
  "author": "Vasco Santos",
  "license": "Apache-2.0 OR MIT",
  "type": "module",
  "types": "dist/src/index.d.ts",
  "main": "src/index.js",
  "scripts": {
    "attw": "attw --pack .",
    "lint": "eslint '**/*.{js,ts}' && prettier --check '**/*.{js,ts,yml,json}' --ignore-path ../../.gitignore",
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "test": "npm run test:all",
    "test:all": "run-s test:browser test:node",
    "test:node": "hundreds -r html -r text mocha 'test/**/!(*.browser).test.js' -n experimental-vm-modules -n no-warnings",
    "test:browser": "playwright-test 'test/**/!(*.node).test.js'",
    "rc": "npm version prerelease --preid rc"
  },
  "exports": {
    ".": "./dist/src/index.js",
    "./block-level-index": "./dist/src/block-level-index.js",
    "./multiple-level-index": "./dist/src/multiple-level-index.js",
    "./record/block": "./dist/src/record/block.js",
    "./record/sharded-dag": "./dist/src/record/sharded-dag.js",
    "./store/memory-block": "./dist/src/store/memory-block.js",
    "./store/memory-sharded-dag": "./dist/src/store/memory-sharded-dag.js",
    "./store/fs-block": "./dist/src/store/fs-block.js",
    "./store/fs-sharded-dag": "./dist/src/store/fs-sharded-dag.js",
    "./types": "./dist/src/api.js"
  },
  "typesVersions": {
    "*": {
      "types": [
        "dist/src/api"
      ],
      "block-level-index": [
        "dist/src/block-level-index.d.ts"
      ],
      "multiple-level-index": [
        "dist/src/multiple-level-index.d.ts"
      ],
      "record/block": [
        "dist/src/record/block.d.ts"
      ],
      "record/sharded-dag": [
        "dist/src/record/sharded-dag.d.ts"
      ],
      "store/memory-block": [
        "dist/src/store/memory-block.d.ts"
      ],
      "store/memory-sharded-dag": [
        "dist/src/store/memory-sharded-dag.d.ts"
      ],
      "store/fs-block": [
        "dist/src/store/fs-block.d.ts"
      ],
      "store/fs-sharded-dag": [
        "dist/src/store/fs-sharded-dag.d.ts"
      ]
    }
  },
  "files": [
    "dist/src/**/*.js",
    "dist/src/**/*.js.map",
    "dist/src/**/*.d.ts",
    "dist/src/**/*.d.ts.map"
  ],
  "dependencies": {
    "@ipld/dag-cbor": "^9.2.2",
    "@ipld/dag-json": "^10.2.3",
    "multiformats": "^13.3.2",
    "uint8arrays": "^5.1.0"
  },
  "devDependencies": {
    "@ipld/car": "^5.4.0",
    "@ipld/unixfs": "^3.0.0",
    "@hash-stream/eslint-config": "workspace:^",
    "@storacha/one-webcrypto": "^1.0.1",
    "@types/assert": "^1.5.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "^22.13.10",
    "@web3-storage/blob-index": "^1.0.5",
    "assert": "^2.0.0",
    "c8": "^7.13.0",
    "hundreds": "^0.0.9",
    "ipfs-car": "^2.0.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "playwright-test": "^12.3.4",
    "typescript": "5.2.2"
  },
  "eslintConfig": {
    "extends": [
      "@hash-stream/eslint-config"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "env": {
      "mocha": true
    },
    "ignorePatterns": [
      "dist",
      "coverage",
      "src/types.js"
    ]
  },
  "depcheck": {
    "specials": [
      "bin"
    ],
    "ignores": [
      "@types/*",
      "assert",
      "c8",
      "@hash-stream/eslint-config"
    ]
  },
  "engines": {
    "node": ">=16.15"
  }
}
